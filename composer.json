{
    "name": "yiisoft/validator",
    "type": "library",
    "description": "Yii Validator",
    "keywords": [
        "validation",
        "validator"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/validator/issues?state=open",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "chat": "https://t.me/yii3en",
        "source": "https://github.com/yiisoft/validator"
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "psr/container": "^1.0|^2.0",
        "yiisoft/arrays": "^2.1",
        "yiisoft/translator": "^1.0",
        "yiisoft/translator-formatter-simple": "^1.0",
        "yiisoft/friendly-exception": "^1.0",
        "yiisoft/network-utilities": "^1.0",
        "yiisoft/strings": "^2.1"
    },
    "require-dev": {
        "jetbrains/phpstorm-attributes": "^1.0",
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.16",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.18",
        "yiisoft/test-support": "^3.0"
    },
    "suggest": {
        "ext-intl": "Allows using IDN validation for emails",
        "yiisoft/di": "To create rule handlers via Yii DI"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Validator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Validator\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "common": "common.php"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
